<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.flat"
    android:versionCode="000400"
    android:versionName="0.4" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_SUPERUSER" />

    <application
        android:name='com.flat.app.AppController'
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".app.OtherTestsActivity"
            android:parentActivityName=".app.OtherTestsActivity"
            android:label="Testing Area">

        </activity>
        <activity
            android:name=".app.OtherDetailsActivity"
            android:uiOptions="splitActionBarWhenNarrow"
            android:parentActivityName=".app.OtherTestsActivity">

        </activity>
        <activity android:name="com.flat.sensors.RotationVectorDemo"
            android:parentActivityName=".app.OtherTestsActivity">

        </activity>
        <activity android:name=".nsd.NsdTestingActivity"
            android:parentActivityName=".app.OtherTestsActivity"
            android:label="NSD Tester">

        </activity>
        <activity android:name=".app.ActiveItemListActivity"
            android:parentActivityName=".app.MainActivity">

        </activity>
        <activity android:name=".app.PrefsActivity"
            android:label="Settings"
            android:parentActivityName=".app.MainActivity">

        </activity>
        <activity android:name=".app.RangeTableActivity"
            android:label="Ranges"
            android:parentActivityName=".app.MainActivity">

        </activity>
        <activity android:name=".app.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name="com.flat.app.AppService"/>
        <service android:name="com.flat.app.BluetoothConnectionService"/>
        <service android:name="com.flat.sensors.MovementSensorService"/>
        <service android:name="com.flat.util.wifi.ScanResultsService"/>
    </application>

</manifest>
